<!doctype html>
<html lang="en">

<head>
  <%- include('./partials/head_page'); %>
</head>
<header>
  <%- include('./partials/header'); %>
</header>

<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="text-primary  text-center"><img class="link" src="link.gif" title="peacock" width="auto" /> Your last 101 activities</h1>
      <div class="well">
        <table class="table table-hover" style="width: 100%">
          <thead>
            <tr>
              <th scope="col">Action</th>
              <th scope="col">Created at</th>
              <th scope="col">Target title</th>
              <th scope="col">Target type</th>
            </tr>
          </thead>
          <tbody>
            <% list.forEach(function(activity) { %>
              <tr>
                <th scope="row">
                  <%= activity.action_name %>
                </th>
                <td>
                  <%= activity.created_at %>
                </td>
                <td>
                  <%= activity.target_title %>
                </td>
                <td>
                  <%= activity.target_type %>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>